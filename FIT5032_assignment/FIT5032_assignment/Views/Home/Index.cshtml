@{
    ViewBag.Title = "Home Page";
}
<!-- author Pan Zhu -->
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<style type="text/css">
    .jumbotron {
        background-image: url('../../Image/express.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }

    .backg {
        background: rgba(0,0,0,0);
    }

    .pic {
        height: 50px;
        background-size: cover;
        display: block;
    }

    .description {
        font-size: 15px;
        text-align: center;
        border: 1px solid red;
        border-radius: 3px;
    }
</style>
<div class="jumbotron">
    <div class="backg">
        <h1>Express Electronic Mall!</h1>
        <p class="lead">Express Electronic Mall provide daily necessities,such as fresh vegetables and meat.</p>
    </div>
</div>

<div class="col-md-8 col-sm-8 col-md-8 col-lg-8 col-xs-8">
    <h2>Provision of goods</h2>
    <div class="row">
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-4 pic">
            <img class="img-responsive" src="~/Image/vegetable.jpg" />
            <div class="description">Vegetables</div>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-4 pic">
            <img class="img-responsive" src="~/Image/milk.jpg" />
            <div class="description">Milk</div>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-4 pic">
            <img class="img-responsive" src="~/Image/meat.jpg" />
            <div class="description">Meat</div>
        </div>
    </div>
</div>


<div class="col-md-4 col-lg-4 col-xs-4 col-sm-4 booktable">
    <h2>How to delievery</h2>

    <form>
        <div class="input-group date">
            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            <input type="text" class="form-control" id="datepicker" value="08/20/2019" />
        </div>
        <div class="form-group">
            <label for="sel1">Way Of Delivery :</label>
            <select class="form-control" id="sel1">
                <option>Home delivery</option>
                <option>Contractless Delivery(recommend)</option>
            </select>
        </div>
        <div class="form-group">
            <label for="sel2">Delivery Time:</label>
            <select class="form-control" id="sel2">
                <option>11am</option>
                <option>12pm</option>
                <option>13pm</option>
                <option>14pm</option>
                <option>15pm</option>
                <option>16pm</option>
                <option>17pm</option>
                <option>18pm</option>
                <option>19pm</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary btn-block">submit</button>
    </form>
</div>
<script>
    $("#datepicker").datepicker({
        todayHighLight: true,
        keyboardNavigation: true,
        pickerPosition: "buttom-right"
    })
</script>







